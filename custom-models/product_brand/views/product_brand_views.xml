<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_brand_view_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="website"/>
                        <field name="exclusive"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_brand_view_tree" model="ir.ui.view">
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="website"/>
                <field name="exclusive"/>
            </tree>
        </field>
    </record>

    <record id="action_product_brand" model="ir.actions.act_window">
        <field name="name">Product Brands</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_brand"
              name="Brands"
              action="action_product_brand"
              parent="stock.menu_product_in_config_stock"
              sequence="5"/>

    <!-- Inherit Product Form View -->
    <record id="product_template_form_view_inherit_brand" model="ir.ui.view">
        <field name="name">product.template.form.inherit.brand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="brand_id"/>
            </xpath>
        </field>
    </record>
</odoo>